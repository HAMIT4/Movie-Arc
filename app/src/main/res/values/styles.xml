<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="TextHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="TitleHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

<!--    chip style for popular searches-->
    <style name="Widget.Custom.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/chip_border</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipIconVisible">false</item>
        <item name="closeIconVisible">false</item>
    </style>

</resources>