<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="TextHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="TitleHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

<!--    chip style for popular searches-->
    <style name="Widget.Custom.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/chip_border</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipIconVisible">false</item>
        <item name="closeIconVisible">false</item>
    </style>

<!--    styling for tab layout-->
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabPaddingTop">8dp</item>
        <item name="tabPaddingBottom">8dp</item>
        <item name="tabMinWidth">72dp</item>
        <item name="tabMaxWidth">120dp</item>
    </style>

<!--    Styling for authentication page-->
    <style name="InfoHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

<!--    custom button style-->
    <style name="TransparentRedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_red</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>


</resources>