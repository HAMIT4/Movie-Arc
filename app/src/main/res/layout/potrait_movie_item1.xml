<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/posterImage"
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/potrait_poster"/>

        <LinearLayout
            android:layout_alignEnd="@id/posterImage"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/dark_bg">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/rating_com"/>
            <TextView
                android:id="@+id/movieRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.5"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/movieTitle"
            android:layout_above="@id/movieRelease"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Caught Stealing"
            android:textColor="#EDEDED"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movieRelease"
            android:layout_alignBottom="@id/posterImage"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025"
            android:textColor="#EDEDED"
            android:textStyle="bold"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
