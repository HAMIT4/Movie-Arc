<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    app:cardCornerRadius="15dp">

    <ImageView
        android:id="@+id/backdropImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backdrop"/>

    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ConstantText"
            android:text="@string/the_fantastic_4_first_steps"/>

        <LinearLayout
            android:id="@+id/mov"
            android:layout_marginTop="8dp"
            android:layout_below="@id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/dark_bg">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/starIcon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/rating_com"/>
                <TextView
                    android:layout_toEndOf="@id/starIcon"
                    android:id="@+id/movieRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ConstantText"
                    android:text="8.7"/>
            </RelativeLayout>

<!--            separator-->
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/gap"/>

            <TextView
                android:id="@+id/movieRelease"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ConstantText"
                android:text="2025"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/gap"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/movieDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ConstantText"
                android:textAllCaps="true"
                android:text="Movie"/>
        </LinearLayout>

<!--        genre by Id items-->
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_below="@id/mov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/genre_id1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                style="@style/ConstantText"
                android:text="@string/sci_fi"
                android:textSize="12sp"
                android:padding="4dp"
                android:background="@drawable/rec_bg"/>

            <TextView
                android:id="@+id/genre_id2"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                style="@style/ConstantText"
                android:text="@string/thriller"
                android:textSize="12sp"
                android:padding="4dp"
                android:background="@drawable/rec_bg"/>

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>